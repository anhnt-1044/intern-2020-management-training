<div class="d-flex">
  <div class="p-0 col-md-2">
    <%= image_tag subject.image.url, class: "img-fluid img-thumbnail" if subject.image.present? %>
  </div>
  <div class="subject-info-details col-md-10">
    <h4 class="font-weight-bold"><%= current_user.name %></h4>
    <div class="course-time font-weight-bold">
      <%= icon "far", "clock" %>
      <%= course.start_date if course.start_date %>
      <%= icon "fas", "long-arrow-alt-right" %>
      <span class="end-date"><%= course.end_date if course.end_date%></span>
      <%= t ".expected" %>
    </div>
    <div class="lastest-updated">
      <%= icon "fas", "sync-alt" %>
      <%= t ".lastest_update", time: course.updated_at %>
    </div>
    <div class="d-flex">
      <%= icon "fas", "list-alt" %>
      <%= t ".detail_of" %>
      <div class="badge badge-success mr-2"><%= course.status %></div>
      <%= link_to trainee_course_path(course) do %>
        <div class="text-uppercase"><%= course.name %></div>
      <% end %>
    </div>
  </div>
</div>
