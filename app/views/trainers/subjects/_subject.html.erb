<tr id="row-<%= subject.id %>">
  <th scope="row"><%= subject_counter + sizing(@subjects) %></th>
  <td class="td-subject-thumbnail">
    <% if subject.image.present? %>
      <%= image_tag subject.image.url, class: "img-thumbnail thumbail" %>
    <% end %>
  </td>
  <td><%= subject.name %></td>
  <td><%= subject.duration %></td>
  <td><%= subject.note %></td>
  <td>
    <%= link_to trainers_subject_path(subject), class: "btn btn-sm btn-outline-info detail-subject-item",
      type: "button", data: {id: "#{subject.id}"} do %>
      <%= icon "fas", "eye" %>
    <% end %>
    <%= link_to trainers_subject_path(subject), class: "btn btn-sm btn-outline-primary edit-subject-item",
      type: "button", data: {id: "#{subject.id}"} do %>
      <%= icon "fas", "pencil-alt" %>
    <% end %>
    <%= link_to trainers_subject_path(subject), class: "btn btn-sm btn-outline-danger delete-subject-item",
      type: "button", data: {id: "#{subject.id}"} do %>
      <%= icon "fas", "trash-alt" %>
    <% end %>
  </td>
</tr>
