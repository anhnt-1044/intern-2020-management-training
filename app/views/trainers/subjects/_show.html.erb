<div class="modal fade" id="subjectDetail" tabindex="-1" role="dialog" aria-labelledby="subjectDetailLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="subjectDetailLabel">
          <%= t ".modal_title" %>
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body d-flex">
        <div class="col-6">
          <div class="card">
            <% if subject.image.present? %>
              <%= image_tag subject.image.url, class: "card-img-top", style: "max-height: 10em" %>
            <% else %>
              <%= image_tag "", class: "card-img-top" %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title">
                <%= t ".label_subject" %>:
                <%= subject.name %>
              </h5>
              <p><%= "(#{subject.duration} days)" %></p>
              <p class="card-text">
                <%= subject.note %>
              </p>
            </div>
          </div>
        </div>
        <div class="col-6">
          <% if subject.present? %>
            <ul class="list-group">
              <%= render partial: "trainers/subjects/task_item", collection: subject.tasks, as: :item %>
            </ul>
          <% else %>
            <p>
              <%= t ".no_task" %>
            </p>
          <% end %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= t ".btn_close" %></button>
      </div>
    </div>
  </div>
</div>
